
@using HttpClients.AuthServices
@using Microsoft.AspNetCore.Components
@namespace Login
@inject NavigationManager navMgr
@inject IAuthService authService


<AuthorizeView>
    <Authorized>
        <img class="icon" src="img/Logout.png" @onclick="Logout"/>
        <img class="icon" src="img/Profile.png" @onclick="Profile" alt="View profile">
    </Authorized>
    <NotAuthorized>
        <img class="icon" src="img/Login.png" @onclick="Login"/>
    </NotAuthorized>
</AuthorizeView>


@code {

    private void Login()
    {
        navMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }

    private void Profile()
    {
        navMgr.NavigateTo("/ViewProfile");
    }

}